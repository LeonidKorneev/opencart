<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="methods" thread-count="4" data-provider-thread-count="4">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="ChromeTest" verbose="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.opencart.test.NavigationTest"/>
            <class name="com.opencart.test.SearchTest"/>
            <class name="com.opencart.test.LoginTest"/>
            <class name="com.opencart.test.CartTest"/>
            <class name="com.opencart.test.ProductTest"/>
        </classes>
    </test>
    <test name="FirefoxTest" verbose="10">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.opencart.test.NavigationTest"/>
            <class name="com.opencart.test.SearchTest"/>
            <class name="com.opencart.test.LoginTest"/>
            <class name="com.opencart.test.CartTest"/>
            <class name="com.opencart.test.ProductTest"/>
        </classes>
    </test>
    <test name="EdgeTest" verbose="10">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.opencart.test.NavigationTest"/>
            <class name="com.opencart.test.SearchTest"/>
            <class name="com.opencart.test.LoginTest"/>
            <class name="com.opencart.test.CartTest"/>
            <class name="com.opencart.test.ProductTest"/>
        </classes>
    </test>
</suite>
